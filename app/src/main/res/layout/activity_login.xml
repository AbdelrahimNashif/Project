<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@android:color/white"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    android:orientation="vertical"
    android:id="@+id/loginLinear">

<TextView
        android:id="@+id/tvlogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="log in"
        android:gravity="center"
        android:textSize="35sp"
        android:fontFamily="@string/font_family"
        android:textColor="@android:color/black"
        android:layout_marginTop="30dp"

        />

        <EditText
        android:id="@+id/etemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="email"
        android:backgroundTint="@android:color/black"
            android:textColor="@android:color/black"
        android:fontFamily="@string/font_family"
        android:drawableStart="@drawable/email_icon_custom"
        android:drawablePadding="10dp"
        android:inputType="textEmailAddress"
        android:layout_marginTop="120dp"
        android:layout_marginHorizontal="40dp"
        />


    <EditText
        android:id="@+id/etpassword"
        android:drawableStart="@drawable/lock_icon_custom"
        android:drawablePadding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="password"
        android:backgroundTint="@android:color/black"
        android:textColor="@android:color/black"
        android:fontFamily="@string/font_family"
        android:inputType="textPassword"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="40dp"
        />
    <Button
        android:id="@+id/btnlogin"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:text="log in"
        android:fontFamily="@string/font_family"
        android:textColor="#fff"
        android:background="@drawable/button_custom"


        />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="20dp"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/doYouHaveAnAcount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="you don't have an acount?"
        android:backgroundTint="@android:color/black"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:fontFamily="@string/font_family"
        />
    <TextView
        android:id="@+id/registertv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text=" register"
        android:fontFamily="@string/font_family"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="15sp"
        />
    <com.google.android.material.circularreveal.cardview.CircularRevealCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.google.android.material.circularreveal.cardview.CircularRevealCardView>
</LinearLayout>


</LinearLayout>